@model VacationsManagerMVC.ViewModels.UserDetailsVM

@{
    ViewBag.Title = "Delete User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-danger text-white">
                        <h2>Delete User: @Model.Username</h2>
                    </div>
                    <div class="card-body">
                        <p>Are you sure you want to delete this user?</p>
                        <dl class="row">
                            <dt class="col-sm-3">Username:</dt>
                            <dd class="col-sm-9">@Model.Username</dd>

                            <dt class="col-sm-3">First Name:</dt>
                            <dd class="col-sm-9">@Model.FirstName</dd>

                            <dt class="col-sm-3">Last Name:</dt>
                            <dd class="col-sm-9">@Model.LastName</dd>

                            <dt class="col-sm-3">Role:</dt>
                            <dd class="col-sm-9">@Model.Role.Name</dd>

                            <dt class="col-sm-3">Team:</dt>
                            <dd class="col-sm-9">@Model.Team?.Name No team assigned</dd>


                            
                        </dl>
                        <div class="text-center">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <a href="@Url.Action("List", "User")" class="btn btn-secondary">Cancel</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
