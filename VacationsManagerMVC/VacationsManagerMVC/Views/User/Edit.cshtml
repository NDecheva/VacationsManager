@model VacationsManagerMVC.ViewModels.UserEditVM

@{
    ViewBag.Title = "Edit User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-warning text-white">
                        <h2>Edit User</h2>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                            <!-- Username Field -->
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Username, new { @class = "form-label" })
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Enter username" })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>

                            <!-- First Name Field -->
                            <div class="mb-3">
                                @Html.LabelFor(model => model.FirstName, new { @class = "form-label" })
                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @placeholder = "Enter first name" })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>

                            <!-- Last Name Field -->
                            <div class="mb-3">
                                @Html.LabelFor(model => model.LastName, new { @class = "form-label" })
                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @placeholder = "Enter last name" })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>

                            <!-- Role Dropdown -->
                            <div class="mb-3">
                                @Html.LabelFor(model => model.RoleId, new { @class = "form-label" })
                                @Html.DropDownListFor(
                                         model => model.RoleId,
                                         new SelectList(Model.AllRoles, "Value", "Text", Model.RoleId),
                                         "Select Role",
                                         new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                            </div>

                            <!-- Team Dropdown -->
                            <div class="mb-3">
                                @Html.LabelFor(model => model.TeamId, new { @class = "form-label" })
                                @Html.DropDownListFor(
                                         model => model.TeamId,
                                         new SelectList(Model.AllTeams, "Value", "Text", Model.TeamId),
                                         "Select Team",
                                         new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TeamId, "", new { @class = "text-danger" })
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-success">Save Changes</button>
                                <a href="@Url.Action("List", "User")" class="btn btn-secondary">Cancel</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
