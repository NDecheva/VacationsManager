@using VacationsManagerMVC.Controllers
@using VacationsManager.Shared.Extensions
@model IEnumerable<VacationsManagerMVC.ViewModels.RoleDetailsVM>

@{
    ViewBag.Title = "Role List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h2 class="text-center mb-4">Role List</h2>
                <a href="@Url.Action("Create", "Role")" class="btn btn-primary mb-3">Add New Role</a>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Role Name</th>
                                <th scope="col">Role Type</th>
                                <th scope="col">Users Assigned</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.Name</td>
                                    <td>@role.RoleType</td>
                                    <td>
                                        @if (role.Users.Any())
                                        {
                                            <ul>
                                                @foreach (var user in role.Users)
                                                {
                                                    <li>@user.Username</li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <span>No Users Assigned</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Role", new { id = role.Id })" class="btn btn-warning btn-sm">Edit</a>
                                        <a href="@Url.Action("Details", "Role", new { id = role.Id })" class="btn btn-info btn-sm">Details</a>
                                        <a href="@Url.Action("Delete", "Role", new { id = role.Id })" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        No roles available.
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
