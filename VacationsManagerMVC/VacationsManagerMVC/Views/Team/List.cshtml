@using VacationsManagerMVC.Controllers
@using VacationsManager.Shared.Extensions
@model IEnumerable<VacationsManagerMVC.ViewModels.TeamDetailsVM>

@{
    ViewBag.Title = "Team List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h2 class="text-center mb-4">Team List</h2>

                <!-- Add New Team Button -->
                <a href="@Url.Action("Create", "Team")" class="btn btn-primary mb-3">Add New Team</a>

                <!-- Search Form -->
                <form method="get" action="@Url.Action("Search", "Team")" class="mb-4">
                    <div class="input-group">
                        <input type="text" class="form-control" name="searchTerm" placeholder="Search for teams..." value="@ViewBag.SearchTerm" />
                        <button class="btn btn-secondary" type="submit">Search</button>
                    </div>
                </form>

                @if (Model != null && Model.Any())  
                {
                    <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Team Name</th>
                                <th scope="col">Project Name</th>
                                <th scope="col">Team Leader</th>
                                <th scope="col">Developers</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var team in Model)
                            {
                                <tr>
                                    <td>@team.Name</td>
                                    <td>@team.Project?.Name</td>
                                    <td>@team.TeamLeader?.FirstName</td>
                                    <td>
                                        @if (team.Developers.Any())
                                        {
                                            <ul>
                                                @foreach (var developer in team.Developers)
                                                {
                                                    <li>@developer.FirstName</li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <span>No developers assigned</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Team", new { id = team.Id })" class="btn btn-warning btn-sm">Edit</a>
                                        <a href="@Url.Action("Details", "Team", new { id = team.Id })" class="btn btn-info btn-sm">Details</a>
                                        <a href="@Url.Action("Delete", "Team", new { id = team.Id })" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        No teams available.
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
