@model VacationsManagerMVC.ViewModels.LogoutVM

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootswatch Lux Theme CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css" rel="stylesheet">
</head>

@{
    ViewBag.Title = "Logout";
}

<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-sm p-4 text-center" style="width: 100%; max-width: 400px;">
            <div class="card-header bg-warning text-dark">
                <h4>Logout</h4>
            </div>
            <div class="card-body">
                @if (User.Identity.IsAuthenticated)
                {
                    <p>Are you sure you want to log out?</p>
                    <form asp-action="Logout" asp-controller="Auth" method="get">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                }
                else
                {
                    <p>You are not logged in.</p>
                    <a href="@Url.Action("Login", "Auth")" class="btn btn-primary w-100 mt-3">Login</a>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Bundle includes Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
