<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootswatch Lux Theme CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css" rel="stylesheet">

    <!-- Page Title -->
    <title>Logout - Vacations Manager</title>
    
    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden; /* Избягва скролването */
        }

        .login-container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: -100px
        }

        .card {
            width: 100%;
            max-width: 400px;
        }
    </style>
</head>
<body>
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm p-4 text-center" style="width: 100%; max-width: 400px;">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Logout</h4>
        </div>
        <div class="card-body">
            @if (User.Identity.IsAuthenticated)
            {
                <p class="mb-4">Are you sure you want to log out?</p>
                <form asp-action="Logout" asp-controller="Auth" method="get">
                    <button type="submit" class="btn btn-danger w-100">Logout</button>
                </form>
            }
            else
            {
                <p class="mb-4">You are not currently logged in.</p>
                <a href="@Url.Action("Login", "Auth")" class="btn btn-primary w-100">Go to Login</a>
            }
        </div>
        <div class="card-footer text-muted small">
            Vacations Manager &copy; @DateTime.Now.Year
        </div>
    </div>
</div>

<!-- Bootstrap JS (Bundle includes Popper.js) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>