﻿﻿@using VacationsManagerMVC.Controllers
@using VacationsManager.Shared.Extensions
@model IEnumerable<VacationsManagerMVC.ViewModels.ProjectDetailsVM>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-center">Project List</h2>
            <a href="@Url.Action("Create", "Project")" class="btn btn-success">Create Project</a>
        </div>

        <!-- Търсачка -->
        <form method="get" action="@Url.Action("Search", "Project")" class="mb-4">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search by name or description" value="@ViewBag.SearchTerm" />
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </form>

        <!-- Показване на резултати -->
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Project Name</th>
                        <th>Description</th>
                        <th>Teams Involved</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model)
                    {
                        <tr>
                            <td>@project.Name</td>
                            <td>@project.Description</td>
                            <td>
                                @if (project.Teams.Any())
                                {
                                    <ul>
                                        @foreach (var team in project.Teams)
                                        {
                                            <li>@team.Name</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>No teams assigned</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Project", new { id = project.Id })" class="btn btn-warning btn-sm">Edit</a>
                                <a href="@Url.Action("Details", "Project", new { id = project.Id })" class="btn btn-info btn-sm">Details</a>
                                <a href="@Url.Action("Delete", "Project", new { id = project.Id })" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                No projects found.
            </div>
        }
    </div>
</body>
</html>
