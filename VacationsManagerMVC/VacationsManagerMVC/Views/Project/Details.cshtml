@model VacationsManagerMVC.ViewModels.ProjectDetailsVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Details</title>

    <!-- Include the Bootstrap Morph theme CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <!-- Back to List Button -->
        <div class="mb-4">
            <a href="@Url.Action("List", "Project")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>

        <!-- Project Details -->
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-primary">@Model.Name</h2>
                <p class="card-text"><strong>Description:</strong> @Model.Description</p>
            </div>
        </div>

        <!-- Assigned Teams -->
        <div class="mt-4">
            <h3 class="text-primary">Assigned Teams</h3>
            @if (Model.Teams.Any())
            {
                <ul class="list-group">
                    @foreach (var team in Model.Teams)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@team.Name</span>
                            <form method="post" asp-action="RemoveTeam" class="d-inline">
                                <input type="hidden" name="projectId" value="@Model.Id" />
                                <input type="hidden" name="teamId" value="@team.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Remove
                                </button>
                            </form>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No teams assigned to this project.</p>
            }
        </div>

        <!-- Add Team -->
        <div class="mt-4">
            <h3 class="text-primary">Add Team</h3>
            <form method="post" asp-action="AddTeam" class="mt-3">
                <input type="hidden" name="projectId" value="@Model.Id" />
                <div class="input-group">
                    <select name="teamId" class="form-select" required>
                        <option disabled selected>Select a team</option>
                        @foreach (var team in (IEnumerable<SelectListItem>)ViewBag.Teams)
                        {
                            <option value="@team.Value">@team.Text</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Include Bootstrap JS and Icons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
</body>
</html>
