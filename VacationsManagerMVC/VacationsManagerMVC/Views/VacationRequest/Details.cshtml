@using VacationsManagerMVC.Controllers
@using VacationsManager.Shared.Extensions
@model VacationsManagerMVC.ViewModels.VacationRequestDetailsVM

@{
    ViewBag.Title = "Vacation Request Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/css/views/vacation-request/details.css" rel="stylesheet" />

</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h2><i class="bi bi-info-circle-fill icon"></i> Vacation Request Details</h2>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong><i class="bi bi-calendar-check icon"></i> @Html.DisplayNameFor(model => model.StartDate)</strong>: @Model.StartDate.ToString("yyyy-MM-dd")
                        </div>

                        <div class="mb-3">
                            <strong><i class="bi bi-calendar-x icon"></i> @Html.DisplayNameFor(model => model.EndDate)</strong>: @Model.EndDate.ToString("yyyy-MM-dd")
                        </div>

                        <div class="mb-3">
                            <strong><i class="bi bi-clock icon"></i> @Html.DisplayNameFor(model => model.IsHalfDay)</strong>:
                            <span class="badge @(Model.IsHalfDay ? "bg-warning text-dark" : "bg-secondary")">
                                @(Model.IsHalfDay ? "Yes" : "No")
                            </span>
                        </div>

                        <div class="mb-3">
                            <strong><i class="bi bi-check-circle icon"></i> @Html.DisplayNameFor(model => model.IsApproved)</strong>:
                            <span class="badge @(Model.IsApproved ? "bg-success" : "bg-danger")">
                                @(Model.IsApproved ? "Approved" : "Pending")
                            </span>
                        </div>

                        <div class="mb-3">
                            <strong><i class="bi bi-person icon"></i> @Html.DisplayNameFor(model => model.Requester)</strong>: @Model.Requester?.Username
                        </div>

                        <div class="mb-3">
                            <strong><i class="bi bi-briefcase icon"></i> @Html.DisplayNameFor(model => model.VacationType)</strong>: @Model.VacationType.ToString()
                        </div>

                        <div class="mb-3">
                            <strong><i class="bi bi-paperclip icon"></i> @Html.DisplayNameFor(model => model.Attachment)</strong>:
                            @if (!string.IsNullOrEmpty(Model.Attachment))
                            {
                                <a href="@Url.Action("DownloadAttachment", "VacationRequest", new { fileName = Model.Attachment })" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-download icon"></i> Download
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No attachment</span>
                            }
                        </div>

                        <hr />

                        <div class="text-center">
                            <a href="@Url.Action("List", "VacationRequest")" class="btn btn-secondary btn-lg btn-outline-primary btn-sm btn-custom">
                                <i class="bi bi-arrow-left-circle icon"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
