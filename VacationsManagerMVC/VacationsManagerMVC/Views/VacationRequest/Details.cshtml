@using VacationsManagerMVC.Controllers
@using VacationsManager.Shared.Extensions
@model VacationsManagerMVC.ViewModels.VacationRequestDetailsVM

@{
    ViewBag.Title = "Vacation Request Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h2>Vacation Request Details</h2>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.StartDate)</strong>: @Model.StartDate.ToString("yyyy-MM-dd")
                        </div>

                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.EndDate)</strong>: @Model.EndDate.ToString("yyyy-MM-dd")
                        </div>

                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.IsHalfDay)</strong>: @(Model.IsHalfDay ? "Yes" : "No")
                        </div>

                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.IsApproved)</strong>: @(Model.IsApproved ? "Yes" : "No")
                        </div>

                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Requester)</strong>: @Model.Requester?.Username
                        </div>

                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Attachment)</strong>: @Model.Attachment
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Attachment)</strong>:
                            @if (!string.IsNullOrEmpty(Model.Attachment))
                            {
                                <a href="@Url.Action("DownloadAttachment", "VacationRequest", new { fileName = Model.Attachment })" class="btn btn-primary">
                                    Download Attachment
                                </a>
                            }
                            else
                            {
                                <span>No attachment available.</span>
                            }
                        </div>


                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.VacationType)</strong>: @Model.VacationType.ToString()
                        </div>

                        <div class="text-center">
                            <a href="@Url.Action("List", "VacationRequest")" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
